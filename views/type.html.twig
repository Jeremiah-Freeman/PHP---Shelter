{% extends "index.html.twig" %}

    {% block inputform %}
    <h2>Shelter a new {{ type.getType }}:</h2>
    <form action='/type/{{type.getId}}' method='post'>
        <div class='form-group'>
            <label for='name'>Animal Name</label>
            <input required type='text' name='name' class='form-control'>
        </div>
        <div class='form-group'>
            <label for='age'>Animal age</label>
            <input required type='number' name='age' class='form-control'>
        </div>
        <div class='form-group'>
            <label for='date'>Date of arrival</label>
            <input required type='date' name='date' class='form-control'>
        </div>
        <button type='submit' class='btn btn-info'>Add to Shelter</button>
    </form>
    {% endblock %}


    {% block navbuttons %}
        <form method="get" class="btn-group-vertical">
                <button type=submit formaction="/" class="btn btn-danger">Home</button>
        </form>
    {% endblock %}



    {% block display %}
        <h2> {{ type.getType }} sheltered here: </h2>
        <ul>
        {% if animals is not empty %}
            {% for animal in animals %}
                <li>{{ animal.getName }}</li>
                <ul>
                    <li>{{animal.getAge}}</li>
                    <li>{{animal.getDateOfAdmittance}}</li>
                </ul>
            {% endfor %}
        {% endif %}
        </ul>
    {% endblock %}
